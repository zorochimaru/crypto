#: import WipeTransition kivy.uix.screenmanager.WipeTransition
<ScreenManagement>:
	transition: WipeTransition()
    MainScreen:
    CaesarScreen:
    VishenerScreen:
    PolibiyScreen:
    EmojiScreen:
    FernetScreen:
    AtbashScreen:
    PlayfairScreen:

<MainScreen>:
	name: "main"
	GridLayout:
		rows:4
		Button:
			text:"Caesar cipher"
			font_size:30
			on_press: app.root.current='Caesar'
		Button:
			text:"Vigenere cipher"
			font_size:30
			on_press: app.root.current='Vishener'
		Button:
			text:"Polybius cipher"
			font_size:30
			on_press: app.root.current='Polibiy'
		Button:
			text:"Atbash cipher"
			font_size:30
			on_press: app.root.current='Atbash'
		Button:
			text:"Playfair cipher"
			font_size:30
			on_press: app.root.current='Playfair'
		Button:
			text:"Fernet"
			font_size:30
			on_press: app.root.current = 'Fernet'
		Button:
			text:"Emoji cipher"
			font_size:30
			on_press: app.root.current = 'Emoji'
		BoxLayout:
			orientation:'vertical'
			Label:
				font_name:'CinzelDecorative-Regular.ttf'
				font_size:20
				text:"Program by Rasim Karimli"
			Image: 
				source: 'logo.png'
<CaesarScreen>:
	name:"Caesar"
	BoxLayout:
		orientation:'vertical'
		BoxLayout:
			BoxLayout:
				orientation:'vertical'
				Label:
					font_size:25
					font_name:'CinzelDecorative-Regular.ttf'
					text:'Julius Caesar (100 B.C.)'
				Button:
					font_size: 30
					text: "Back"
					on_press: app.root.current = 'main'
			Image: 
				size_hint_x: 0.32
				source: 'caesar.jpg'
			BoxLayout:
				orientation:'vertical'
				Label:
					font_size:25
					text:'Choose shift'
				Spinner:
					id: caesar_gap
					font_size:30
					text: "1"
					values:'1', '2','3','4','5'
		TextInput:
			id: caesar_in
			font_size:20
			text: "Input text"
			on_focus:caesar_in.text = ""
		BoxLayout:
			Button:
				id:caesar_enc
				font_size:30
				text:"Encrypt"
				on_press: root.caesar_encrypt(caesar_in.text.upper(), int(caesar_gap.text))
				Image:
		            source: 'down.png'
		            y: self.parent.y 
		            x: self.parent.x +  self.parent.width - 100
		            size: 100, 100
			Button:
				id:caesar_dec
				font_size:30
				text:"Decrypt"
				on_press: root.caesar_decrypt(caesar_in.text.upper(), int(caesar_gap.text))
				Image:
		            source: 'down.png'
		            y: self.parent.y 
		            x: self.parent.x + self.parent.width - 100 
		            size: 100, 100
		TextInput:
			id:caesar_out
			font_size:20

<VishenerScreen>:
	name:'Vishener'
	BoxLayout:
		orientation:'vertical'
		BoxLayout:
			BoxLayout:
				orientation:'vertical'
				Label:
					font_size:25
					font_name:'CinzelDecorative-Bold.ttf'
					halign: 'center'
					text:'Blaise de Vigen√®re\n(1523-1596 A.C.)'
				Button:
					font_size: 30
					text: "Back"
					on_press: app.root.current = 'main'
			Image: 
				size_hint_x: 0.33
				source: 'vishener.jpg'
			BoxLayout:
				orientation:'vertical'
				Label:
					font_size:25
					text:'Write keyword'
				TextInput:
					font_size:25
					id: vishener_key
		TextInput:
			id: vishener_in
			font_size:20
			text: "Input text"
			on_focus:vishener_in.text = ""
		BoxLayout:
			Button:
				id:vishener_enc
				font_size:30
				text:"Encrypt"
				on_press: root.vishener_encrypt(vishener_in.text.upper(), vishener_key.text.upper())
				Image:
		            source: 'down.png'
		            y: self.parent.y 
		            x: self.parent.x +  self.parent.width - 100
		            size: 100, 100
			Button:
				id:caesar_dec
				font_size:30
				text:"Decrypt"
				on_press: root.vishener_decrypt(vishener_out.text.upper(), vishener_key.text.upper())
				Image:
		            source: 'up.png'
		            y: self.parent.y 
		            x: self.parent.x
		            size: 100, 100
		TextInput:
			id:vishener_out
			font_size:20

